@model CoffeeCircles.Models.Shop

@{
    ViewData["Title"] = "Edit Shop";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>Editing shop details</h2>
        <hr />
        <form method="post" asp-action="CreateEditShop" asp-route-shopId="@Model.ShopId" asp-route-photoRef="@Model.PhotoRef" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Photo</label>
                <span class="label label-info">4:3 is preferred</span>
                <input type="file" name="photo" accept=".jpg, .jpeg, .png" class="form-control-static" />
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" autocomplete="off" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" autocomplete="off" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" autocomplete="off" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkingFrom" class="control-label"></label>
                <input asp-for="WorkingFrom" type="time" min="00:00" max="23:59" step="60" class="form-control" />
                <span asp-validation-for="WorkingFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkingTo" class="control-label"></label>
                <input asp-for="WorkingTo" type="time" min="00:00" max="23:59" step="60" class="form-control" />
                <span asp-validation-for="WorkingTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Confirm
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Shops">Back to List</a>
</div>

